= form_for @scholarship do |f|
  -if @scholarship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scholarship.errors.count, "error")} prohibited this scholarship from being saved:"
      %ul
        - @scholarship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :year
    = f.text_field :year
  .field
    = f.label :deadline
    = f.date_select :deadline
  .field
    = f.label :addr
    = f.text_field :addr
  .field
    = f.label :attachment
    = f.text_field :attachment
  .field
    = f.label :prize
    = f.text_field :prize
  .field
    = f.label :max
    = f.text_field :max
  .field
    = f.label :applicant
    = f.text_field :applicant
  .field
    = f.label :desc1
    = f.text_area :desc1
  .field
    = f.label :desc2
    = f.text_area :desc2
  .actions
    = f.submit 'Save'
